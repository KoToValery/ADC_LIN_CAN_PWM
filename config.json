{
  "name": "ADC LIN CAN PWM Gateway",
  "version": "1.0.0",
  "slug": "adc_lin_can_pwm",
  "description": "ADC monitoring with LIN/CAN communication and PWM control",
  "arch": ["armhf", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "devices": [
    "/dev/spidev0.0",
    "/dev/spidev0.1",
    "/dev/ttyAMA0",
    "/dev/gpiochip0",
    "/dev/gpiochip4",
    "/sys/class/pwm"
  ],
  "privileged": ["SYS_RAWIO"],
  "full_access": false,
  "host_network": false,
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Web UI port"
  },
  "options": {
    "mqtt_broker": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "",
    "mqtt_password": "",
    "mqtt_discovery_prefix": "homeassistant"
  },
  "schema": {
    "mqtt_broker": "str",
    "mqtt_port": "port",
    "mqtt_user": "str?",
    "mqtt_password": "password?",
    "mqtt_discovery_prefix": "str"
  },
  "environment": {
    "RPI_LGPIO_CHIP": "4"
  }
}
